<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>
        <div class="wrapper-posts">
            <%- include('./partials/menu.ejs') %>
                <div class="posts">
                    <article>
                        <div class="info">
                            <span class="date">
                                <%= post.date || 'no date' %>
                            </span>
                            <span class="author">
                                <%= post.author %>
                            </span>
                        </div>
                        <h2 class="post-title">
                            <%= post.title %>
                        </h2>
                        <p class="post-text">
                            <%= post.text %>
                        </p>
                        <ul class="reactions">
                            <li class="likes">
                                <span>
                                    <%= post.likes || '0' %>
                                </span>
                                <i class="fa-solid fa-thumbs-up"></i>
                            </li>
                            <li class="dislikes">
                                <span>
                                    <%= post.dislikes || '0' %>
                                </span>
                                <i class="fa-solid fa-thumbs-down"></i>
                            </li>
                            <li class="comments">
                                <span>
                                    <%= post.comments || '0' %>
                                </span>
                                <i class="fa-solid fa-comment"></i>
                            </li>
                        </ul>
                    </article>
                </div>

        </div>
        <script src="https://kit.fontawesome.com/1d10fc3313.js" crossorigin="anonymous"></script>
    </body>

</html>